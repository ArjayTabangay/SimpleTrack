@page "/"
@inject AuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Parcel Tracking System</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4">Welcome to Parcel Tracking</h1>
            <p class="lead">Track your parcels in real-time with our modern tracking system</p>
        </div>
    </div>

    @if (AuthService.IsAuthenticated)
    {
        <div class="row mt-4">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Welcome back, @AuthService.Username!</h5>
                        <p class="card-text">You're logged in and ready to track your parcels.</p>
                        <a href="/tracking" class="btn btn-primary btn-lg">
                            <i class="bi bi-search"></i> Start Tracking
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row mt-4">
            <div class="col-md-8 offset-md-2">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="bi bi-shield-check text-success"></i>
                                    Secure Tracking
                                </h5>
                                <p class="card-text">
                                    Your parcel information is protected with JWT authentication and encrypted connections.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="bi bi-lightning text-warning"></i>
                                    Real-time Updates
                                </h5>
                                <p class="card-text">
                                    Get instant notifications when your parcel status changes using SignalR technology.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row mt-3">
                    <div class="col-12 text-center">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Get Started</h5>
                                <p class="card-text">Login to access the parcel tracking system</p>
                                <a href="/login" class="btn btn-primary btn-lg">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Features</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="text-center">
                                <i class="bi bi-search fs-1 text-primary"></i>
                                <h6 class="mt-2">Track Parcels</h6>
                                <small class="text-muted">Search by tracking number</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <i class="bi bi-bell fs-1 text-success"></i>
                                <h6 class="mt-2">Live Updates</h6>
                                <small class="text-muted">Real-time status changes</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <i class="bi bi-table fs-1 text-info"></i>
                                <h6 class="mt-2">View All</h6>
                                <small class="text-muted">See all parcels at once</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <i class="bi bi-cloud fs-1 text-warning"></i>
                                <h6 class="mt-2">Cloud Based</h6>
                                <small class="text-muted">Accessible anywhere</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
